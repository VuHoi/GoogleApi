<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.vukhachoi.musicapp.danhsachphong">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"

        android:minHeight="?attr/actionBarSize" >
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:orientation="vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#424242"
            android:padding="2dp"
            android:text="Đã phát"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp"
            android:textColor="#0a0909"
            android:text="Ngốc"></TextView>
        <TextView
            android:padding="2dp"
            android:textColor="#424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="16:30"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/xungnhac"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#0e0e0e"
            android:padding="10dp"
            android:text="Cơn mưa ngang qua"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:progress="50"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:orientation="vertical"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#424242"
            android:padding="2dp"
            android:text="Kế tiếp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="2dp"
            android:textColor="#0a0909"
            android:text="Ngốc2"></TextView>
        <TextView
            android:padding="2dp"
            android:textColor="#424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="16:30"></TextView>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="7dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioAndroid"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@drawable/home"


                android:checked="true"

                android:padding="5dp"
                ></RadioButton>

            <RadioButton
                android:id="@+id/radioiPhone"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@drawable/home"
                android:gravity="center"
                android:padding="5dp"
                android:text="iPhone"></RadioButton>

            <RadioButton

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@drawable/home"
                android:gravity="center"
                android:padding="5dp"
                android:text="Windows"></RadioButton>
            <RadioButton

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@drawable/home"
                android:gravity="center"
                android:padding="5dp"
                android:text="Windows"></RadioButton>
            <RadioButton

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rbtn_selector"
                android:button="@drawable/home"

                android:buttonTintMode="screen"

                android:gravity="center"
                android:padding="5dp"
                ></RadioButton>
        </RadioGroup>

    </LinearLayout>

</LinearLayout>
