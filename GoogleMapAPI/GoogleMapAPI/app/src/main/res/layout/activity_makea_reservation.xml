<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.billy.googlemap_test.MakeaReservation">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="Make a reservation"
        android:textSize="35dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textColor="#263238"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MON - SUN"
        android:layout_below="@+id/textView5"
        android:textSize="25dp"
        android:layout_marginTop="12dp"
        android:layout_centerInParent="true"
        android:id="@+id/textView6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="11:00 AM - 02:00 PM    |    05:00 PM - 11:00 PM"
        android:id="@+id/textview7"
        android:layout_below="@+id/textView6"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="0919 99 84 88"
        android:paddingTop="20dp"
        android:textColor="#263238"
        android:textStyle="bold"

        android:id="@+id/textview8"
        android:layout_below="@+id/textview7"
        android:layout_centerInParent="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlttitle"
        android:layout_below="@+id/textview8"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="110dp"
            android:padding="5dp"
            android:layout_height="2dp"
            android:background="#263238"
            android:layout_marginTop="40dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="50dp"
            android:id="@+id/line1"
            android:orientation="horizontal"></LinearLayout>
        <TextView
            android:layout_toRightOf="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:id="@+id/txttitle"
            android:text="Book A Room"
            android:paddingTop="20dp"
            android:textColor="#263238"
            android:textStyle="bold"


            android:layout_centerInParent="true"
            />
        <LinearLayout
            android:layout_toRightOf="@+id/txttitle"
            android:layout_width="110dp"
            android:padding="5dp"
            android:layout_height="2dp"
            android:background="#263238"
            android:layout_marginTop="40dp"
            android:id="@+id/line2"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rlttitle"
        android:weightSum="3"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/rlttitle"
                android:id="@+id/yourname"
                android:text="Your name"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"

                />
            <EditText
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/yourname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/rlttitle"
                android:id="@+id/phone"
                android:text="Phone number"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"

                />
            <EditText
                android:layout_width="match_parent"
android:numeric="integer"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:id="@+id/time"
                android:text="Time"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edttime"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yourname"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:id="@+id/room"
                android:text="Room"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"

                />
            <Spinner

                android:entries="@array/country_arrays"
                android:prompt="@string/country_prompt"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOK NOW"
        android:textStyle="bold"
android:layout_below="@+id/container"

        android:id="@+id/book"
        />



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/book"
        app:menu="@menu/testnavi"></android.support.design.widget.BottomNavigationView>
</RelativeLayout>
