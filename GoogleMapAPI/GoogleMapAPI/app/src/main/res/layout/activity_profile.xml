<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="com.example.billy.googlemap_test.profile">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_alignParentTop="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="0dp"
            android:max="100"
            android:progress="85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtgrs"
            tools:layout_editor_absoluteY="189dp" />

        <TextView
            android:id="@+id/txtgrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="8dp"

            android:text="Hồ sơ hoàn thành 85%"
            android:textSize="15dp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="130dp"
            android:layout_height="103dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/custom_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Nguyễn Văn A"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="8dp"
            android:text="Hạng thẻ"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:text="GOLD"
            android:textColor="#f7ff00"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/testnavi"></android.support.design.widget.BottomNavigationView>

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintBottom_toTopOf="@+id/navi"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btntim"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_below="@+id/btnvi"
            android:drawableLeft="@mipmap/ic_launcher_round"
            android:drawablePadding="20dp"
            android:gravity="left"
            android:text="Sửa thông tin"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="359dp" />

        <Button
            android:id="@+id/btnLichsu"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_below="@+id/btntim"
            android:drawableLeft="@mipmap/ic_launcher_round"
            android:drawablePadding="20dp"
            android:gravity="left"
            android:text="Message"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="280dp" />

        <Button
            android:id="@+id/btnmatkhau"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_below="@+id/btnLichsu"
            android:drawableLeft="@mipmap/ic_launcher_round"
            android:drawablePadding="20dp"
            android:gravity="left"
            android:text="Message"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="230dp" />

        <Button
            android:id="@+id/btnvi"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/btnmesg"
            android:drawableLeft="@mipmap/ic_launcher_round"
            android:layout_weight="1"
            android:drawablePadding="20dp"
            android:gravity="left"
            android:text="Message"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="425dp" />

        <Button
            android:id="@+id/btnmesg"
            android:layout_weight="1"

            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableLeft="@mipmap/ic_launcher_round"
            android:drawablePadding="20dp"
            android:gravity="left"
            android:text="Đổi mật khẩu"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="225dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
